{
  "compilerOptions": {
    "target": "es5",
    "diagnostics": true,
    "lib": ["es5", "es6", "dom"],
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
